<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"

        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:background="@drawable/background"

        tools:context=".ui.subfragments.PatientMenuFragment">


    <TextView

        android:id="@+id/textViewPatientTitle"

        android:layout_width="350dp"

        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"

        android:layout_marginTop="16dp"

        android:layout_marginEnd="16dp"

        android:text="@string/patient_label_menu"
        android:textAlignment="center"
        android:textColor="@color/white"

        android:textSize="28sp"
        app:autoSizeTextType="uniform"

        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



        <androidx.constraintlayout.widget.Guideline

            android:id="@+id/guideline2"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            app:layout_constraintGuide_percent="0.5" />



        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"

            android:id="@+id/cardView"

            android:layout_width="175dp"

            android:layout_height="150dp"

            app:cardElevation="15dp"

            app:cardCornerRadius="8dp"

            android:layout_marginTop="32dp"

            app:layout_constraintEnd_toStartOf="@+id/guideline2"

            app:layout_constraintHorizontal_bias="0.65"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/textViewPatientTitle" >

            <LinearLayout




                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:orientation="vertical"

                android:gravity="center"

                android:layout_gravity="center_horizontal|center_vertical">

                <ImageView



                    android:layout_width="75dp"

                    android:layout_height="75dp"

                    android:src="@drawable/ic_medical_treatment"
                    />

                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:textSize="20dp"

                    android:text="@string/medical_treatment_label_menu"/>



            </LinearLayout>



        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView

            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"

            android:id="@+id/cardView3"

            android:layout_width="175dp"

            android:layout_height="150dp"

            app:cardElevation="15dp"

            app:cardCornerRadius="8dp"

            app:layout_constraintBottom_toBottomOf="@+id/cardView"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.35"

            app:layout_constraintStart_toStartOf="@+id/guideline2"

            app:layout_constraintTop_toTopOf="@+id/cardView" >

            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:orientation="vertical"

                android:gravity="center"

                android:layout_gravity="center_horizontal|center_vertical">

                <ImageView

                    android:layout_width="75dp"

                    android:layout_height="75dp"

                    android:src="@drawable/ic_schedule"/>

                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:textSize="20dp"

                    android:text="@string/schedule_label_menu"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView

            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"

            android:id="@+id/cardView2"

            android:layout_width="175dp"

            android:layout_height="150dp"

            android:layout_marginTop="24dp"

            app:cardElevation="15dp"

            app:cardCornerRadius="8dp"

            app:layout_constraintEnd_toEndOf="@+id/cardView"

            app:layout_constraintStart_toStartOf="@+id/cardView"

            app:layout_constraintTop_toBottomOf="@+id/cardView" >

            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:orientation="vertical"

                android:gravity="center"

                android:layout_gravity="center_horizontal|center_vertical">

                <ImageView

                    android:layout_width="75dp"

                    android:layout_height="75dp"

                    android:src="@drawable/ic_report"/>

                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:textSize="20dp"

                    android:text="@string/reports_label_menu"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"

            android:id="@+id/cardView4"

            android:layout_width="175dp"

            android:layout_height="150dp"

            app:cardElevation="15dp"

            app:cardCornerRadius="8dp"

            app:layout_constraintBottom_toBottomOf="@+id/cardView2"

            app:layout_constraintEnd_toEndOf="@+id/cardView3"

            app:layout_constraintStart_toStartOf="@+id/cardView3"

            app:layout_constraintTop_toTopOf="@+id/cardView2"

            app:layout_constraintVertical_bias="0.0" >

            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:orientation="vertical"

                android:gravity="center"

                android:layout_gravity="center_horizontal|center_vertical">

                <ImageView

                    android:layout_width="75dp"

                    android:layout_height="75dp"

                    android:src="@drawable/ic_config"/>

                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:textSize="20dp"

                    android:text="@string/settings_label_menu"/>



            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>