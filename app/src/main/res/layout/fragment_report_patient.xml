<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.subfragments.ReportPatientFragment">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="16dp"
        android:text="@string/select_for_generate_a_report"
        android:textColor="#040404"
        android:textSize="17dp"
        android:textStyle="bold" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView3"
        android:layout_width="154dp"
        android:layout_height="149dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:padding="5dp"
        android:src="@drawable/ic_pdf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@android:color/darker_gray"
        app:strokeWidth="5dp" />
    <Button
        android:id="@+id/btnReportTreatments"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:layout_marginStart="36dp"
        android:layout_marginTop="275dp"
        android:text="@string/treatments_button" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView4"
        android:layout_width="154dp"
        android:layout_height="149dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="36dp"
        android:layout_gravity="right"
        android:padding="5dp"
        android:src="@drawable/ic_pdf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@android:color/darker_gray"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/btnReportDosages"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="36dp"
        android:layout_gravity="right"
        android:text="@string/dosages_button"
        />

</FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>